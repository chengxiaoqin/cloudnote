<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxq.mapper.UsersMapper">
	<insert id="insertUser" parameterType="com.cxq.pojo.Users">
		<!-- 主键自增时注意表要定义为主键自增 -->

		insert into users(name,password) values(#{name},#{password})
	</insert>

	<select id="checkUserName" parameterType="com.cxq.pojo.Users"
		resultType="int">
		select count(*) from users where name=#{name};
	</select>

	<select id="checkUser" parameterType="com.cxq.pojo.Users"
		resultType="int">
		select
		count(*) from users where name = #{name} and password
		= #{password};
	</select>
	<select id="queryId" parameterType="String" resultType="int">
		select id
		from users where name = #{string};
	</select>
</mapper>